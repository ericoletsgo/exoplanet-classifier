{
  "version": 2,
  "builds": [
    {
      "src": "api/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/main.py"
    },
    {
      "src": "/predict",
      "dest": "/frontend/dist/index.html"
    },
    {
      "src": "/batch",
      "dest": "/frontend/dist/index.html"
    },
    {
      "src": "/retrain",
      "dest": "/frontend/dist/index.html"
    },
    {
      "src": "/datasets",
      "dest": "/frontend/dist/index.html"
    },
    {
      "src": "/metrics",
      "dest": "/frontend/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ],
  "functions": {
    "api/main.py": {
      "maxDuration": 30
    }
  }
}
